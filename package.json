{
  "name": "commandist",
  "version": "0.0.2",
  "description": "",
  "main": "core/app.js",
  "dependencies": {
    "@donghoonyoo/icon-extractor": "^1.0.10",
    "@types/node": "^13.9.0",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "exe-icon-extractor": "^1.0.8",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "ts-md5": "^1.2.7",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "electron": "^8.1.0",
    "electron-builder": "^22.4.0"
  },
  "scripts": {
    "start": "tsc && electron core/app.js",
    "build": "npm install && tsc && electron-builder build"
  },
  "build": {
    "appId": "com.commandist",
    "productName": "Commandist (Developer Preview)",
    "copyright": "GPL-3.0",
    "asar": true,
    "asarUnpack": [
      "assets/**",
      "node_modules/@donghoonyoo/icon-extractor/**",
      "core/control/configuration-manager.*",
      "core/service/**"
    ],
    "files": [
      "assets/**",
      "core/**",
      "node_modules/**",
      "LICENSE"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publisherName": "Donghoon Yoo",
      "icon": "./assets/Icons/Commandist-Developer_Preview.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "license": "LICENSE",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/Icons/Commandist-Developer_Preview.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donghoony1/Commandist.git"
  },
  "author": "Donghoon Yoo",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/donghoony1/Commandist/issues"
  },
  "homepage": "https://github.com/donghoony1/Commandist#readme"
}
